# Enhanced SEO Audit Tool V3.0 - Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000

# Crawling Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
REQUEST_DELAY=1.0
MAX_PAGES_LIMIT=50

# Caching Configuration
CACHE_ENABLED=true
CACHE_MAX_AGE_HOURS=24
CACHE_CLEANUP_DAYS=7

# SERP Analysis Configuration
SERP_ANALYSIS_ENABLED=true
SERP_MAX_RESULTS=10

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# File Paths
REPORTS_DIR=reports
EXPORTS_DIR=exports
CACHE_DIR=cache
LOGS_DIR=logs

# Enhanced Features
WHOLE_WEBSITE_MAX_PAGES=1000
ENHANCED_REPORTING=true
CSV_EXPORT_ENABLED=true

# Security (Production)
VERIFY_SSL=true
ALLOWED_DOMAINS=
BLOCKED_DOMAINS=

# Performance Tuning
CONNECTION_POOL_SIZE=20
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30

# Logging
LOG_LEVEL=INFO

# Database (Future use)
DATABASE_URL=sqlite:///cache/seo_audit.db
